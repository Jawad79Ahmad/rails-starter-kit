<div class="w-full flex flex-wrap h-screen">

  <!-- Image Section -->
  <div class="w-1/2 hidden md:block">
    <div class='flex justify-center'>
      <%= image_tag('auth-side-image.webp', class: 'object-contain w-1/2 h-screen') %>
    </div>
  </div>

  <!-- Login Section -->
  <div class="w-full md:w-1/2 flex flex-col">

    <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
      <div class="p-6 space-y-2 md:space-y-4 sm:p-8">
        <p class="text-center text-3xl mb-4 leading-tight tracking-tight text-gray-700 md:text-2xl dark:text-white">
          Sign Up
        </p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-2' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email, class: 'block mb-2 text-gray-700 dark:text-white' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full mt-1 px-3 py-2 dark:border-gray-600 dark:bg-gray-700 border rounded-md border-cyan-700 focus:outline-none dark:text-gray-300 form-input' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'block mb-2 text-gray-700 dark:text-white' %>
            <% if @minimum_password_length %>
              <em class='text-gray-700 dark:text-white'>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'block w-full mt-1 px-3 py-2 dark:border-gray-600 dark:bg-gray-700 border rounded-md border-cyan-700 focus:outline-none dark:text-gray-300 form-input' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: 'block mb-2 text-gray-700 dark:text-white' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'block w-full mt-1 px-3 py-2 dark:border-gray-600 dark:bg-gray-700 border rounded-md border-cyan-700 focus:outline-none dark:text-gray-300 form-input' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: 'w-3 h-3 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800' %>
              <%= f.label :remember_me, class: 'font-light text-gray-500 dark:text-gray-300' %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Sign Up", class: 'cursor-pointer w-full px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-cyan-600 border border-transparent rounded-lg active:bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:shadow-outline-cyan' %>
          </div>
        <% end %>
        <div class='text-center pt-12 pb-12'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
