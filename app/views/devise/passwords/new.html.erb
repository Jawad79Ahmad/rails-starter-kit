<div class="w-full flex flex-wrap h-screen">

  <!-- Image Section -->
  <div class="w-1/2 hidden md:block">
    <div class='flex justify-center'>
      <%= image_tag('auth-side-image.webp', class: 'object-contain w-1/2 h-screen') %>
    </div>
  </div>

  <!-- Login Section -->
  <div class="w-full md:w-1/2 flex flex-col">

    <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
      <div class="p-6 space-y-2 md:space-y-4 sm:p-8">
        <p class="text-center text-3xl mb-4 leading-tight tracking-tight text-gray-700 md:text-2xl dark:text-white">
          Forgot password?
        </p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-2 md:space-y-4' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email, class: 'block mb-2 text-gray-700 dark:text-white' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'block w-full mt-1 px-3 py-2 dark:border-gray-600 dark:bg-gray-700 border rounded-md border-cyan-700 focus:outline-none dark:text-gray-300 form-input' %>
          </div>

          <div class="actions">
            <%= f.submit "Get reset password token", class: 'cursor-pointer w-full px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-cyan-600 border border-transparent rounded-lg active:bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:shadow-outline-cyan' %>
          </div>
        <% end %>
        <div class='text-center pt-12 pb-12'>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>
